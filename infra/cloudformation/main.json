{
  "Description": "Sandbox Stack",
  "Parameters": {
    "TemplateURL": {
      "Type": "String",
      "Default": "https://sumeragis-cloudformation.s3.ap-northeast-1.amazonaws.com/"
    }
  },
  "Resources": {
    "Network": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Join": ["", [{ "Ref": "TemplateURL" }, "network.json"]]
        }
      }
    },
    "Computing": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Join": ["", [{ "Ref": "TemplateURL" }, "computing.json"]]
        }
      },
      "DependsOn": "Network"
    },
    "Database": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Join": ["", [{ "Ref": "TemplateURL" }, "database.json"]]
        }
      },
      "DependsOn": "Network"
    }
  }
}
